<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="hospital_patient_inherit_form_view" model="ir.ui.view">
            <field name="name">hospital.patient</field>
            <field name="model">hospital.patient</field>
            <field name="inherit_id" ref="hospital_management_system.hospital_patient_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button class="oe_highlight" type="object" name="delete_records" string="Delete From New DB"/>
                    <button class="oe_highlight" type="object" name="select_records" string="Select From New DB"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>